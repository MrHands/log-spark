{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"outDir": "./build",
		// "rootDir": "./source",

		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true,

		"strict": true,
		"allowJs": false,
		"checkJs": false,
		"allowUnreachableCode": false,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"strictPropertyInitialization": true,
		"noUncheckedIndexedAccess": false,
		"skipLibCheck": true,

		"typeRoots": [
			"node_modules/@types",
			"types"
		]
	},
	"include": [
		".eslintrc.js",
		"jest.config.ts",
		"source/",
		"types/"
	],
	"exclude": [
		"./build",
		"./node_modules"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
