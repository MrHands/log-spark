{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"outDir": "../build/tests",
		"rootDir": "../",

		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,

		"strict": true,
		"allowJs": false,
		"checkJs": false,
		"allowUnreachableCode": false,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"strictPropertyInitialization": true,
		"noUncheckedIndexedAccess": false,
		"skipLibCheck": true
	},
	"typeRoots": [
		"node_modules/@types",
		"../types"
	],
	"exclude": [
		"webpack.config.ts"
	],
	"plugins": [
		{ "transform": "../build" }
	],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
